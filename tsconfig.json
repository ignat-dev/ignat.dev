{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@types": ["src/types/index"],
      "@utils": ["src/utils/index"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": [".astro/types.d.ts", "**/*"]
}
